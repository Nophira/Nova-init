{
  "name": "nova",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:nova-init": "turbo run dev --filter=nova-init",
    "nova-init": "cd packages/nova-init && ts-node dist/bin/index.js",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "check": "turbo run check",
    "publish-nova-init": "turbo run build --filter=nova-init"
  },
  "devDependencies": {
    "ts-node": "^10.0.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "workspaces":[
     "apps/*",
     "packages/*"
  ]
}
