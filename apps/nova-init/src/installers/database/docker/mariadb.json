{
  "name": "mariadb",
  "description": "MySQL-compatible Database",
  "image": "mariadb:latest",
  "defaultPort": 3306,
  "internalPort": 3306,
  "parameters": {
    "containerName": {
      "type": "string",
      "default": "mariadb",
      "description": "Name des Docker-Containers"
    },
    "database": {
      "type": "string",
      "default": "local",
      "description": "Name der Datenbank"
    },
    "username": {
      "type": "string",
      "default": "admin",
      "description": "Benutzername für die Datenbank"
    },
    "password": {
      "type": "string",
      "default": "password123",
      "description": "Passwort für die Datenbank"
    },
    "port": {
      "type": "number",
      "default": 3306,
      "description": "Port für die Datenbank"
    },
    "networkName": {
      "type": "string",
      "default": "local_dbs_network",
      "description": "Name des Docker-Netzwerks"
    },
    "volumeName": {
      "type": "string",
      "default": "mariadb_data",
      "description": "Name des Data-Volumes"
    }
  },
  "dockerCompose": {
    "version": "3.8",
    "services": {
      "mariadb": {
        "image": "mariadb:latest",
        "container_name": "${containerName}",
        "environment": {
          "MYSQL_DATABASE": "${database}",
          "MYSQL_USER": "${username}",
          "MYSQL_PASSWORD": "${password}",
          "MYSQL_ROOT_PASSWORD": "${password}"
        },
        "healthcheck": {
          "test": ["CMD", "mysqladmin", "ping", "-h", "localhost"],
          "retries": 3,
          "timeout": "5s"
        },
        "networks": ["local"],
        "ports": ["${port}:3306"],
        "volumes": ["${volumeName}:/var/lib/mysql"]
      }
    },
    "networks": {
      "local": {
        "driver": "bridge",
        "name": "${networkName}"
      }
    },
    "volumes": {
      "${volumeName}": {
        "driver": "local",
        "name": "${volumeName}"
      }
    }
  },
  "connectionInfo": {
    "host": "localhost",
    "port": "${port}",
    "database": "${database}",
    "username": "${username}",
    "password": "${password}",
    "connectionString": "mysql://${username}:${password}@localhost:${port}/${database}"
  }
}
