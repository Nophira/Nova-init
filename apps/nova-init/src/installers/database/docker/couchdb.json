{
  "name": "couchdb",
  "description": "Document-Store Database",
  "image": "couchdb:latest",
  "defaultPort": 5984,
  "internalPort": 5984,
  "parameters": {
    "containerName": {
      "type": "string",
      "default": "couchdb",
      "description": "Name des Docker-Containers"
    },
    "adminUser": {
      "type": "string",
      "default": "admin",
      "description": "Admin-Benutzername"
    },
    "adminPassword": {
      "type": "string",
      "default": "password123",
      "description": "Admin-Passwort"
    },
    "port": {
      "type": "number",
      "default": 5984,
      "description": "Port f√ºr die Datenbank"
    },
    "networkName": {
      "type": "string",
      "default": "local_dbs_network",
      "description": "Name des Docker-Netzwerks"
    },
    "volumeName": {
      "type": "string",
      "default": "couchdb_data",
      "description": "Name des Data-Volumes"
    }
  },
  "dockerCompose": {
    "version": "3.8",
    "services": {
      "couchdb": {
        "image": "couchdb:latest",
        "container_name": "${containerName}",
        "environment": {
          "COUCHDB_USER": "${adminUser}",
          "COUCHDB_PASSWORD": "${adminPassword}"
        },
        "healthcheck": {
          "test": ["CMD", "curl", "-f", "http://localhost:5984/_up"],
          "retries": 3,
          "timeout": "5s"
        },
        "networks": ["local"],
        "ports": ["${port}:5984"],
        "volumes": ["${volumeName}:/opt/couchdb/data"]
      }
    },
    "networks": {
      "local": {
        "driver": "bridge",
        "name": "${networkName}"
      }
    },
    "volumes": {
      "${volumeName}": {
        "driver": "local",
        "name": "${volumeName}"
      }
    }
  },
  "connectionInfo": {
    "host": "localhost",
    "port": "${port}",
    "username": "${adminUser}",
    "password": "${adminPassword}",
    "webInterface": "http://localhost:${port}/_utils"
  }
}
